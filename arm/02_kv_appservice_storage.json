{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appServiceName": {
            "type": "string",
            "defaultValue": "anbossarapp",
            "metadata": {
                "description": ""
            }
        },
        "kvName": {
            "type": "string",
            "defaultValue": "anbossarkv",
            "metadata": {
                "description": ""
            }
        },
        "storageName": {
            "type": "string",
            "defaultValue": "anbossarstor",
            "metadata": {
                "description": ""
            }
        }
    },
    "variables": {
        "postfix": "[toLower(take(base64(resourceGroup().Id), 3))]",
        "resourceNames": {
            "AppService": "[concat(parameters('appServiceName'), variables('postfix'))]",
            "AppServicePlan": "[concat(parameters('appServiceName'), 'plan', variables('postfix'))]",
            "StorageAccount": "[concat(parameters('storageName'), variables('postfix'))]",
            "KeyVault": "[concat(parameters('kvName'), variables('postfix'))]",
            "KeyVaultSecretsConnectionString": "anbossarStorageConnectionString"
        },
        "resourceVersions": {
            "KeyVault": "2019-09-01",
            "AppService": "2020-12-01",
            "AppServicePlan": "2020-12-01",
            "StorageAccount": "2021-01-01"
        }
    },
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "[variables('resourceVersions').KeyVault]",
            "name": "[variables('resourceNames').KeyVault]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[variables('resourceNames').AppService]"
            ],
            "properties": {
                "enableRbacAuthorization": false,
                "enableSoftDelete": false,
                "enabledForDeployment": false,
                "enabledForDiskEncryption": false,
                "enabledForTemplateDeployment": false,
                "tenantId": "[subscription().tenantId]",
                "accessPolicies": [
                    {
                        "tenantId": "[reference(variables('resourceNames').AppService, variables('resourceVersions').AppService, 'Full').identity.tenantId]",
                        "objectId": "[reference(variables('resourceNames').AppService, variables('resourceVersions').AppService, 'Full').identity.principalId]",
                        "permissions": {
                            "secrets": [
                                "list",
                                "get",
                                "set"
                            ]
                        }
                    }
                ],
                "sku": {
                    "name": "Standard",
                    "family": "A"
                },
                "networkAcls": {
                    "defaultAction": "Allow",
                    "bypass": "AzureServices"
                }
            },
            "resources": [
                {
                    "type": "secrets",
                    "name": "[variables('resourceNames').KeyVaultSecretsConnectionString]",
                    "apiVersion": "[variables('resourceVersions').KeyVault]",
                    "dependsOn": [
                        "[variables('resourceNames').KeyVault]",
                        "[variables('resourceNames').StorageAccount]"
                    ],
                    "properties": {
                        "value": "[
                            concat(
                            'DefaultEndpointsProtocol=https;AccountName=', 
                            variables('resourceNames').StorageAccount, 
                            ';AccountKey=', 
                            listKeys(variables('resourceNames').StorageAccount,variables('resourceVersions').StorageAccount).keys[0].value)
                            ]"
                    }
                }
            ]
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('resourceNames').StorageAccount]",
            "apiVersion": "[variables('resourceVersions').StorageAccount]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "StorageV2",
            "properties": {}
        },
        {
            "name": "[variables('resourceNames').AppServicePlan]",
            "type": "Microsoft.Web/serverfarms",
            "kind": "linux",
            "location": "[resourceGroup().location]",
            "apiVersion": "[variables('resourceVersions').AppServicePlan]",
            "dependsOn": [],
            "tags": {},
            "properties": {
                "name": "[variables('resourceNames').AppServicePlan]",
                "workerSize": 1,
                "reserved": true,
                "numberOfWorkers": 1
            },
            "sku": {
                "name": "B2",
                "tier": "Basic",
                "size": "B2",
                "family": "B",
                "capacity": 1
            }
        },
        {
            "name": "[variables('resourceNames').AppService]",
            "type": "Microsoft.Web/sites",
            "identity": {
                "type": "SystemAssigned"
            },
            "apiVersion": "[variables('resourceVersions').AppService]",
            "location": "[resourceGroup().location]",
            "tags": {},
            "dependsOn": [
                "[variables('resourceNames').AppServicePlan]"
            ],
            "properties": {
                "name": "[variables('resourceNames').AppService]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "DOCKER_REGISTRY_SERVER_URL",
                            "value": "https://mcr.microsoft.com"
                        },
                        {
                            "name": "DOCKER_REGISTRY_SERVER_USERNAME",
                            "value": ""
                        },
                        {
                            "name": "DOCKER_REGISTRY_SERVER_PASSWORD",
                            "value": null
                        },
                        {
                            "name": "WEBSITES_ENABLE_APP_SERVICE_STORAGE",
                            "value": "false"
                        }
                    ],
                    "linuxFxVersion": "DOCKER|mcr.microsoft.com/appsvc/staticsite:latest",
                    "appCommandLine": "",
                    "alwaysOn": "false"
                },
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('resourceNames').AppServicePlan)]",
                "clientAffinityEnabled": false
            },
             "resources": [
                {
                    "type": "config",
                    "name": "appsettings",
                    "apiVersion": "[variables('resourceVersions').AppService]",
                    "dependsOn": [
                        "[variables('resourceNames').AppService]",
                        "[variables('resourceNames').KeyVaultSecretsConnectionString]"
                    ],
                    "properties": {
                        "AzureWebJobsStorage": "[
                            concat(
                                '@Microsoft.KeyVault(SecretUri=', 
                                reference(variables('resourceNames').KeyVaultSecretsConnectionString).secretUriWithVersion, 
                                ')'
                                )
                            ]"
                    }
                }
            ]
        }
    ],
    "outputs": {}
}